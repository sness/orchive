<h1>Change Password</h1>

<%= error_messages_for :user %>

<% form_for(:user, :url => { :action => 'change_password' }) do |f| -%>

  <div class="formRow">
	<div class="formColumn">
	  <label for="current_password">Current Password</label><br/>
	  <%= f.password_field :current_password, :size => 30 %>
	</div>
	<br class="clear" />
  </div>

  <div class="formRow">
	<div class="formColumn">
	  <label for="password">New Password</label><br/>
	  <%= f.password_field :password, :size => 30 %>
	</div>
	<div class="formColumn">
	  <label for="password_confirmation">Retype your new password</label><br/>
	  <%= f.password_field :password_confirmation, :size => 30 %><br/>
	</div>
	<br class="clear" />
  </div>

  <div class="formRow">
	<%= submit_tag("Change password", { :class => "button", :title => "Submit" }) %>
  </div>

<% end %>
