<% if users.length > 0 %>
  <h2>Annotations</h2>
  <form name="userAnnotationForm">
	<select name="userAnnotation" multiple="multiple" size=<%= users.size %> onChange="userAnnotationChange()">
	  <% users.each do |user| %>
		<option value="<%= user.id -%>"
				<% if user.id == current_user.id %>
				  selected="selected"
				<% end %>
				><%= user.login %>
	  <% end %>
	</select>
  </form>
<% end %>
