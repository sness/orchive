<% if !current_user.nil? && current_user != :false && current_user.admin %>
  <h2>Observations and Comments</h2>
  <form action="/recordings/upload_comments/<%= @recording.id %>?user_id=<%= current_user.id %>" method="post">
	<textarea id="comments" name="comments" rows="5" cols="60"><% if !@user_comments.nil? %><%= @user_comments.text %><% end %></textarea>
	
	 <%= submit_to_remote 'upload_comments', 'Save', :url => { :action => "upload_comments", :id => @recording.id, :user_id => current_user.id } %>
  </form>

<% end %>

<% @all_comments.each do |comment| %>
  <b>User:</b> <%= comment.user.login %><br />
  <b>Comments:</b> <%= comment.text %><br />
<% end %>

